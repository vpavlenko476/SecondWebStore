@model RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Регистрация</h2>
                <form asp-action="Registration" asp-antiforgery="true" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="@Model.UserName" type="text" placeholder="Имя" />
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input asp-for="@Model.Password" type="password" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="@Model.PasswordConfirm" type="password" placeholder="Подтвердите пароль" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

                    <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</div>